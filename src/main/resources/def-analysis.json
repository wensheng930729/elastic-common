{
  "filter": {
    "autocomplete": {
      "type": "edge_ngram",
      "min_gram": "1",
      "max_gram": "20"
    }
  },
  "char_filter": {
    "alphaonly": {
      "type": "pattern_replace",
      "pattern": "[^\\pL]",
      "replacement": ""
    },
    "alphanum": {
      "type": "pattern_replace",
      "pattern": "[^(\\d|\\pL)]",
      "replacement": ""
    },
    "digitonly": {
      "type": "pattern_replace",
      "pattern": "[^\\d]",
      "replacement": ""
    },
    "rfc5322": {
      "type": "pattern_replace",
      "pattern": "[^(\\d\\pL!#$%&'*+-/=?^_`{|}~@)]",
      "replacement": ""
    },
    "zeroremove": {
      "type": "pattern_replace",
      "pattern": "\\b0+",
      "replacement": ""
    }
  },
  "analyzer": {
    "default": {
      "type": "standard"
    },
    "allAnalyzer": {
      "type": "custom",
      "tokenizer": "whitespace",
      "filter": [
        "lowercase",
        "asciifolding"
      ]
    },
    "alphaAnalyzer": {
      "type": "custom",
      "tokenizer": "keyword",
      "char_filter": [
        "alphaonly"
      ],
      "filter": [
        "lowercase",
        "asciifolding"
      ]
    },
    "alphanumAnalyzer": {
      "type": "custom",
      "tokenizer": "keyword",
      "char_filter": [
        "alphanum"
      ],
      "filter": [
        "lowercase",
        "asciifolding"
      ]
    },
    "autoCompleteAnalyzer": {
      "type": "custom",
      "tokenizer": "whitespace",
      "filter": [
        "lowercase",
        "autocomplete"
      ]
    },
    "normAnalyzer": {
      "type": "custom",
      "tokenizer": "keyword",
      "filter": [
        "lowercase",
        "asciifolding"
      ]
    },
    "numAnalyzer": {
      "type": "custom",
      "tokenizer": "keyword",
      "char_filter": [
        "digitonly",
        "zeroremove"
      ]
    },
    "pathAnalyzer": {
      "tokenizer": "path_hierarchy",
      "filter": [
        "lowercase"
      ]
    },
    "rfc5322Analyzer": {
      "type": "custom",
      "tokenizer": "keyword",
      "char_filter": [
        "rfc5322"
      ],
      "filter": [
        "lowercase",
        "asciifolding"
      ]
    }
  }
}